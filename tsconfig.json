{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jquery"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "enableIvy": false,
        "allowEmptyCodegenFiles": true
    }
}